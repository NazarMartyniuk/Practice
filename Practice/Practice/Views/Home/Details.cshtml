@model Practice.Models.ProjectViewModel

<div class="page-header">
    <h1>Project '@Model.Name'</h1>
</div>

<div class="bs-component">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <span class="close" data-dismiss="alert">x</span>
                    <ul>
                        @foreach (var key in @ViewData.ModelState.Keys)
                        {
                            foreach (var err in ViewData.ModelState[key].Errors)
                            {
                                <li>@err.ErrorMessage</li>
                            }
                        }
                    </ul>
                </div>
            }
            <div class="bs-component">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2>Specifications</h2>
                    </div>
                    <div class="panel-body">
                        <table class="table table-striped table-bordered table-hover">
                            <tr>
                                <td>Id</td>
                                <td>@Model.Id</td>
                                <td></td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>Name</td>
                                <td>@Model.Name</td>
                                <td></td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>Description</td>
                                <td>@Model.Description</td>
                                <td></td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>Project Created</td>
                                <td>@Model.CreatedDate</td>
                                <td></td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>Expected Expiration Date</td>
                                <td>@Model.ExpectedExpirationDate</td>
                                <td></td>
                                <td></td>
                            </tr>
                        </table>
                        <div>
                            @{Html.RenderPartial("_ProjectWorker", Model.ProjectWorkersViewModel); }
                        </div>
                        <div>
                            @{Html.RenderPartial("_ProjectTasks", Model.ProjectTasksViewModel); }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>