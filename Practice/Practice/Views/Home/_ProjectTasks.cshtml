@model Practice.Models.ProjectTasksViewModel

<div class="panel panel-default">
    <div class="panel-heading">
        <h2>Tasks</h2>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr class="tablehead" style="vertical-align:middle">
                    <th>Name</th>
                    <th>Description</th>
                    <th>Type</th>
                    <th>Priority</th>
                    <th>Perfomer</th>
                    <th>Created Date</th>
                    <th>Expiration Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model.Tasks)
                {
                    <tr class="clickable-row" onclick="location.href='@Url.Action("TaskDetails", "Home", new { id = task.Id, projectId = task.ProjectId })'" style="cursor: pointer">
                        <td>@task.Name</td>
                        <td>@task.Description</td>
                        <td style="color:@(Practice.code.Functions.GetTaskTypeColor(task.Type))">@task.Type</td>
                        <td style="color:@(Practice.code.Functions.GetTaskPriorityColor(task.Priority))">@task.Priority</td>
                        <td>@task.Worker</td>
                        <td>@task.CreatedDate</td>
                        <td>@task.ExpirationDate</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="panel-footer">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <a class="btn btn-primary" href="@Url.Action("AddTaskToProject", "Home", new { id = Model.ProjectId, ReturnUrl = Request.RawUrl })">Add New Task</a>
            </div>
        </div>
    </div>
</div>