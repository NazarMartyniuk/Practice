@model Practice.Models.ProjectWorkersViewModel

<div class="panel panel-default">
    <div class="panel-heading">
        <h2>Workers</h2>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr class="tablehead" style="vertical-align:middle">
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var worker in Model.WorkersOnProject)
                {
                    <tr>
                        <td>@worker.Name</td>
                        <td>@worker.Surname</td>
                        <td>@worker.Job</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="panel-footer">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <a class="btn btn-primary" href="@Url.Action("AddWorkerToProject", "Home", new { id = Model.Id, ReturnUrl = Request.RawUrl })">Add New Worker</a>
            </div>
        </div>
    </div>
</div>