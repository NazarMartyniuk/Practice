@model Practice.Models.ProjectsViewModel

<div class="page-header">
    <h1>Projects List</h1>
</div>

<div class="bs-component">
    <div class="col-lg-6">
        @Html.ActionLink("Create New Project", "CreateProject", new { ReturnUrl = "" }, new { @class = "btn btn-link" })
    </div>
</div>

<div class="bs-component">
    <table class="table table-striped table-hover">
        <thead>
            <tr class="tablehead">
                <th>Name</th>
                <th>Project Start Date</th>
                <th>Expected Project End Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model.Projects)
            {
                <tr class="clickable-row" onclick="location.href='@Url.Action("Details", "Home", new { id = project.Id })'" style="cursor: pointer">
                    <td>@project.Name</td>
                    <td>@project.CreatedDate</td>
                    <td>@project.ExpectedExpirationDate</td>
                </tr>
            }
        </tbody>
    </table>
</div>